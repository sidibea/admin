{% extends '::base.html.twig' %}

{% block title %} Promtoion  {{ parent() }} {% endblock %}
 {% block pagestyle %}
     <!-- bootstrap datepicker -->
     <link rel="stylesheet" href="{{ absolute_url(asset('assets/plugins/datepicker/datepicker3.css')) }}">
 {% endblock %}

{% block contentheader %}
    <h1>
        Promotion
        <small>Ajouter une promotion</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('nb_main_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li class="active">promotion</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Ajouter une promotion</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form, {'attr': { 'role' : 'form' }}) }}

                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}
                <div class="box-body">
                    <div class="form-group">
                        <label>Code</label>
                        {{ form_widget(form.code, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Axes</label>
                        {{ form_widget(form.axes, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Disponible Sur</label>
                        {{ form_widget(form.canal, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Compagnie</label>
                        {{ form_widget(form.compagnie, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Montant</label>
                        {{ form_widget(form.montant, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Heure de Debut</label>
                        {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control ' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Heure de Fin</label>
                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control ' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        <img src="{{ absolute_url(asset('assets/images/uploads/compagnies/photo/'~promotion.photo)) }}" width="100" height="100" alt=""/>
                        {{ form_widget(form.photo, {'attr': {'class': 'file' }}) }}
                    </div>



                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block pagescript %}
    <!-- bootstrap datepicker -->
    <script src="{{ absolute_url(asset('assets/plugins/datepicker/bootstrap-datepicker.js')) }}"></script>
{% endblock %}


{% block script %}
    <!-- page script -->
    <script>
        $(function () {

        });
    </script>

{% endblock %}